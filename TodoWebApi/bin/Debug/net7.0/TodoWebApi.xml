        <member name="M:TodoWebApi.Controllers.TasksController.GetTasks">
             <summary>
             Fetch all todos from database.
             </summary>
             <remarks>
             Sample request:
            
                 http://localhost:5142/api/Tasks/
            
             </remarks>
        </member>
        <member name="M:TodoWebApi.Controllers.TasksController.GetTasks(System.Int32)">
             <summary>
             Fetch specific todo with ID.
             </summary>
             <remarks>
             Sample request:
            
                 http://localhost:5142/api/Tasks/1
            
             </remarks>
        </member>
        <member name="M:TodoWebApi.Controllers.TasksController.PutTasks(System.Int32,TodoWebApi.Models.Tasks)">
             <summary>
             Update existing Todo.
             </summary>
             <remarks>
             Sample request:
            
                 PUT /Todo
                 {
                    "id": 1,
                    "name": "update task",
                    "isComplete": true
                 }
            
             </remarks>
        </member>
        <member name="M:TodoWebApi.Controllers.TasksController.PostTasks(TodoWebApi.Models.Tasks)">
             <summary>
             Creates a TodoItem.
             </summary>
             <returns>A newly created TodoItem</returns>
             <remarks>
             Sample request:
            
                 POST /Todo
                 {
                    "id": 1,
                    "name": "Item 1",
                    "isComplete": true
                 }
            
             </remarks>
             <response code="201">Returns the newly created item</response>
             <response code="400">If the item is null</response>
        </member>
